{% comment %}
  Premium Brand Mega Menu Header Block
  Quadrant forms, black accent minimalism
{% endcomment %}

<div class="mega-menu-header" data-block-id="{{ block.id }}">
  {% if block.settings.layout_type == 'categories' %}
    <div class="mega-menu-categories">
      <div class="mega-menu-grid">
        <div class="mega-menu-left">
          <div class="subcategories-grid">
            {% for i in (1..6) %}
              {% assign subcategory_title = 'subcategory_title_' | append: i %}
              {% assign subcategory_url = 'subcategory_url_' | append: i %}
              {% if block.settings[subcategory_title] != blank %}
                <div class="subcategory-item">
                  <a href="{{ block.settings[subcategory_url] | default: '#' }}" class="subcategory-link">
                    {{ block.settings[subcategory_title] }}
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        
        <div class="mega-menu-right">
          {% if block.settings.featured_image != blank %}
            <div class="featured-product-square">
              <img 
                src="{{ block.settings.featured_image | image_url: width: 400 }}"
                alt="{{ block.settings.featured_alt | default: 'Featured Product' }}"
                loading="lazy"
                class="featured-image"
              >
              {% if block.settings.featured_title != blank %}
                <div class="featured-overlay">
                  <h3 class="featured-title">{{ block.settings.featured_title }}</h3>
                  {% if block.settings.featured_url != blank %}
                    <a href="{{ block.settings.featured_url }}" class="featured-cta">Shop Now</a>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
      
      <div class="mega-menu-separator"></div>
    </div>
    
  {% elsif block.settings.layout_type == 'brands' %}
    <div class="mega-menu-brands">
      <div class="brands-alphabetical">
        {% for i in (1..12) %}
          {% assign brand_name = 'brand_name_' | append: i %}
          {% assign brand_url = 'brand_url_' | append: i %}
          {% if block.settings[brand_name] != blank %}
            <div class="brand-item">
              <a href="{{ block.settings[brand_url] | default: '#' }}" class="brand-link">
                {{ block.settings[brand_name] }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      <div class="mega-menu-separator"></div>
    </div>
  {% endif %}
</div>

<style>
  .mega-menu-header {
    background: #ffffff;
    border: 1px solid #000000;
    margin: 0;
    padding: 0;
  }

  .mega-menu-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 2rem;
    padding: 2rem;
    min-height: 300px;
  }

  .mega-menu-left {
    display: flex;
    align-items: flex-start;
  }

  .subcategories-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    width: 100%;
  }

  .subcategory-item {
    padding: 0.75rem 0;
  }

  .subcategory-link {
    color: #000000;
    text-decoration: none;
    font-weight: 400;
    font-size: 0.95rem;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    transition: opacity 0.2s ease;
  }

  .subcategory-link:hover {
    opacity: 0.6;
  }

  .mega-menu-right {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .featured-product-square {
    position: relative;
    width: 400px;
    height: 400px;
    overflow: hidden;
    background: #f8f8f8;
  }

  .featured-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .featured-product-square:hover .featured-image {
    transform: scale(1.05);
  }

  .featured-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    padding: 2rem 1.5rem 1.5rem;
    color: #ffffff;
  }

  .featured-title {
    font-size: 1.5rem;
    font-weight: 300;
    margin: 0 0 0.5rem 0;
    letter-spacing: 1px;
  }

  .featured-cta {
    color: #ffffff;
    text-decoration: none;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-bottom: 1px solid #ffffff;
    padding-bottom: 2px;
    transition: opacity 0.2s ease;
  }

  .featured-cta:hover {
    opacity: 0.7;
  }

  .mega-menu-brands {
    padding: 2rem;
  }

  .brands-alphabetical {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .brand-item {
    padding: 0.75rem 0;
  }

  .brand-link {
    color: #000000;
    text-decoration: none;
    font-weight: 300;
    font-size: 1rem;
    letter-spacing: 0.5px;
    transition: opacity 0.2s ease;
  }

  .brand-link:hover {
    opacity: 0.6;
  }

  .mega-menu-separator {
    height: 1px;
    background: #000000;
    margin: 0;
  }

  @media (max-width: 768px) {
    .mega-menu-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1.5rem;
    }

    .featured-product-square {
      width: 100%;
      max-width: 300px;
      height: 300px;
    }

    .subcategories-grid {
      grid-template-columns: 1fr;
    }

    .brands-alphabetical {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

