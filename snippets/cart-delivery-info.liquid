{% stylesheet %}
  .cart-delivery-info {
    display: flex;
    flex-direction: column;
    gap: var(--gap-sm);
    padding: var(--padding-md);
    margin-block: var(--margin-md);
    background-color: rgb(var(--color-foreground-rgb) / var(--opacity-5));
    border-radius: var(--style-border-radius-cards);
  }

  .cart-delivery-info__item {
    display: flex;
    align-items: center;
    gap: var(--gap-sm);
  }

  .cart-delivery-info__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    color: var(--color-foreground);
  }

  .cart-delivery-info__icon svg {
    width: 100%;
    height: 100%;
  }

  .cart-delivery-info__text {
    font-size: var(--cart-font-size--sm);
    color: var(--color-foreground);
    line-height: 1.4;
  }

  /* Mobile specific */
  @media screen and (max-width: 749px) {
    .cart-delivery-info {
      padding: var(--padding-sm);
      gap: var(--gap-xs);
    }

    .cart-delivery-info__text {
      font-size: var(--cart-font-size--xs);
    }
  }
{% endstylesheet %}
