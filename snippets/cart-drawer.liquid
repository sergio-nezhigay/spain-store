{%- doc -%}
  Renders the cart drawer, a slide-out panel that displays the contents of the cart. It includes the cart icon that acts as a trigger.

  @param {object} [settings] - An object containing theme settings.

  @param {boolean} [settings.auto_open_cart_drawer] - If `true`, the cart drawer opens automatically after an item is
  added.
  @param {string} [settings.drawer_color_scheme] - The color scheme for the drawer.
{%- enddoc -%}

<script
  src="{{ 'cart-drawer.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<script
  src="{{ 'cart-drawer-recommendations.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<cart-drawer-component
  class="cart-drawer"
  {{ block.shopify_attributes }}
  {% if settings.auto_open_cart_drawer %}
    auto-open
  {% endif %}
>
  <button
    class="button header-actions__action button-unstyled"
    on:click="/open"
    aria-haspopup="dialog"
    aria-label="{{ 'accessibility.cart' | t }}"
    aria-describedby="cart-bubble-text"
    data-testid="cart-drawer-trigger"
  >
    {% render 'cart-icon-component' %}
  </button>

  <dialog
    ref="dialog"
    class="cart-drawer__dialog dialog-modal dialog-drawer color-{{ settings.drawer_color_scheme }}{% if cart.empty? %} cart-drawer--empty{%endif%}"
    aria-labelledby="{% if cart.empty? %}cart-drawer-heading-empty{% else %}cart-drawer-heading{% endif %}"
    scroll-lock
  >
    <div class="cart-drawer__inner">
      <cart-items-component
        class="cart-items-component"
        data-section-id="{{ section.id }}"
      >
        {%- if cart.empty? -%}
          <div class="cart-drawer__header">
            <button
              ref="closeButton"
              on:click="cart-drawer-component/close"
              class="button close-button cart-drawer__close-button button-unstyled"
              aria-label="{{ 'actions.close_dialog' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-close.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>

          <div
            class="cart-drawer__content motion-reduce"
            aria-label="{{ 'accessibility.cart' | t }}"
          >
            <h2
              class="cart-drawer__heading h3 cart-drawer__heading--empty"
              id="cart-drawer-heading-empty"
            >
              {{ 'content.your_cart_is_empty' | t }}
            </h2>

            <div class="cart-drawer__items">
              {% render 'cart-products' %}
            </div>
          </div>
        {%- else -%}
          <div
            class="cart-drawer__header"
            id="cart-drawer-header"
          >
            <h2
              class="cart-drawer__heading h3"
              id="cart-drawer-heading"
            >
              {{ 'content.cart_title' | t }}
              {% render 'cart-bubble' %}
            </h2>

            <button
              ref="closeButton"
              on:click="cart-drawer-component/close"
              class="button close-button cart-drawer__close-button button-unstyled"
              aria-label="{{ 'actions.close_dialog' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-close.svg' | inline_asset_content -}}
              </span>
            </button>
          </div>

          <div
            class="cart-drawer__content motion-reduce"
            aria-label="{{ 'accessibility.cart' | t }}"
            style="--header-height: 60px;"
          >
            <scroll-hint
              class="cart-drawer__items"
            >
              {% render 'cart-products' %}

              {%- comment -%} Product Recommendations {%- endcomment -%}
              <cart-drawer-recommendations
                class="cart-drawer-recommendations"
                data-url="{{ routes.product_recommendations_url }}"
                data-section-id="cart-drawer-recommendations"
                data-limit="3"
              >
                <div class="cart-drawer-recommendations__wrapper">
                  <h3 class="cart-drawer-recommendations__heading">Frequently Bought Together</h3>
                  <div class="cart-drawer-recommendations__content">
                    {%- comment -%} Content loaded via JS {%- endcomment -%}
                  </div>
                </div>
              </cart-drawer-recommendations>
            </scroll-hint>

            <div
              class="cart-drawer__summary"
            >
              {% render 'cart-summary' %}
            </div>
          </div>
        {%- endif -%}
      </cart-items-component>
    </div>
  </dialog>
</cart-drawer-component>

{% stylesheet %}
  .cart-items-component {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .cart-drawer__heading .cart-bubble {
    width: fit-content;
    border-radius: var(--style-border-radius-buttons-primary);
    aspect-ratio: auto;
    padding: var(--cart-padding);
  }

  .cart-drawer__heading .cart-bubble[data-maintain-ratio] {
    aspect-ratio: 1;
    min-width: 26px;
  }

  .cart-drawer__header {
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: var(--cart-drawer-padding);
    border-bottom: var(--style-border-width) solid none;
    position: sticky;
    top: 0;
    z-index: 1;

    @media screen and (min-width: 750px) {
      padding: var(--cart-drawer-padding-desktop);
    }
  }

  .cart-drawer__dialog {
    overflow: hidden;
  }

  .cart-drawer__inner {
    height: 100%;
    overflow: hidden;
  }

  .cart-drawer__content {
    height: calc(100% - var(--header-height));
    display: flex;
    flex-direction: column;
  }

  .cart-drawer__summary {
    background-color: var(--color-background);
    position: sticky;
    bottom: 0;
    z-index: 1;
  }

  /* Cart Drawer Recommendations */
  .cart-drawer-recommendations {
    display: block;
    margin-top: var(--margin-2xl);
  }

  .cart-drawer-recommendations.hidden {
    display: none;
  }

  .cart-drawer-recommendations__wrapper {
    width: 100%;
  }

  .cart-drawer-recommendations__heading {
    font-size: var(--cart-font-size--md);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--margin-md);
    color: var(--color-foreground);
  }

  .cart-drawer-recommendations__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--gap-md);
    width: 100%;

    @media screen and (min-width: 750px) {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--gap-lg);
    }
  }

  .cart-drawer-recommendations__item {
    display: flex;
    flex-direction: column;
    gap: var(--gap-xs);
    text-decoration: none;
    color: var(--color-foreground);
    transition: opacity var(--animation-speed) var(--animation-easing);
  }

  .cart-drawer-recommendations__item:hover {
    opacity: var(--opacity-70);
  }

  .cart-drawer-recommendations__image {
    aspect-ratio: 3 / 4;
    width: 100%;
    overflow: hidden;
    border-radius: var(--style-border-radius-cards);
    background-color: rgb(var(--color-foreground-rgb) / var(--opacity-5));
  }

  .cart-drawer-recommendations__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-drawer-recommendations__placeholder {
    width: 100%;
    height: 100%;
    background-color: rgb(var(--color-foreground-rgb) / var(--opacity-10));
  }

  .cart-drawer-recommendations__details {
    display: flex;
    flex-direction: column;
    gap: var(--gap-2xs);
  }

  .cart-drawer-recommendations__title {
    font-size: var(--cart-font-size--sm);
    font-weight: var(--font-weight-normal);
    margin: 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .cart-drawer-recommendations__price {
    font-size: var(--cart-font-size--sm);
    font-weight: var(--font-weight-bold);
  }

  .cart-drawer-recommendations__sale-price {
    color: var(--color-sale);
    margin-right: var(--margin-2xs);
  }

  .cart-drawer-recommendations__compare-price {
    text-decoration: line-through;
    opacity: var(--opacity-50);
    font-size: var(--cart-font-size--xs);
  }

  /* Loading skeleton */
  .cart-drawer-recommendations__skeleton-item {
    aspect-ratio: 3 / 4;
    background-color: rgb(var(--color-foreground-rgb) / var(--opacity-5));
    border-radius: var(--style-border-radius-cards);
    opacity: var(--skeleton-opacity);
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% {
      opacity: var(--skeleton-opacity);
    }
    50% {
      opacity: calc(var(--skeleton-opacity) * 0.5);
    }
    100% {
      opacity: var(--skeleton-opacity);
    }
  }
{% endstylesheet %}
